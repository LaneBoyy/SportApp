<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    tools:context=".activities.ChooseTypeActivity">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_backround_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="300dp"
        android:layout_height="120dp"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvArms"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginEnd="60dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/tvArms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arms"
                android:textColor="@color/text_grey"
                android:textSize="20sp"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvPress"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/tvPress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Press"
                android:textSize="20sp"
                android:textColor="@color/text_grey"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="300dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvLegs"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginEnd="60dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/tvLegs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Legs"
                android:textColor="@color/text_grey"
                android:textSize="20sp"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvBack"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:textColor="@color/text_grey"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/tvBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textColor="@color/text_grey"
                android:textSize="20sp"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>